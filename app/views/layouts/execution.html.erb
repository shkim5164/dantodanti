    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  
  
</head>
  
  <!--불주먹상단-->
  <div class="container.fluid" style="color:white;">
    <div class="row" style=" text-align:center;">
      <div class="col-3" style="background-image:url('/img/FireFistLeft.jpg');background-repeat: no-repeat;background-position: left;"></div>
      
      <div class="col">
        <hr class="my-2">
        <h1 style="color:white; font-size:100px;">공개처형</h1>
        <hr class="my-2">
        <div class="lead">PUBLIC EXECUTION</div>
        <hr class="my-2">
        <p>당신은 이미 죽어있다.</p>
      </div>
      
      <div class="col-3" style="background-image:url('/img/FireFistRight.jpg');background-repeat: no-repeat;background-position: right;"></div>
    </div>
  </div>


  <hr>
  
  <!--카드메인 (상위3명) -->
  <div class="row d-flex justify-content-center">
    
  <% @allrecord.limit(3).each do |d| %>
        <div class="col-lg-3 col-md-4">
          <div class="card">
            <img class="card-img-top" src="http://placehold.it/500x325" alt>
            <div class="card-body">
              <h4 class="card-title"><%= d.name %></h4>
              <p class="card-text">
                <%= d.major %><%= d.number %>
              </p>
            </div>
            <div class="card-footer">
              <a href="/public/show/<%= d.id %>" class="btn btn-primary">find out more</a>
            </div>
          </div>
        </div>
  <% end %>
  </div>
  
  <hr>
  
  <div class="mt-4">
    <table class="table" style="width:50%; margin:auto; text-align:center; color:white;">
      <thead class="thead-white">
        <tr>
          <th scope="col">랭킹</th>
          <th scope="col">이름</th>
          <th scope="col">학과</th>
          <th scope="col">학번</th>
        </tr>
      </thead>
      <tbody>
         <% @allrecord.each do |d| %>
            <tr>
              <th scope="row"><%= d.id %></th>
              <td><a href="/public/show/<%= d.id %>"><%= d.name %></a></td>
              <td><a href="/public/show/<%= d.id %>"><%= d.major %></a></td>
              <td><a href="/public/show/<%= d.id %>"><%= d.number %></a></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <hr>
  
  <p class="lead d-flex justify-content-center">
    <a class="btn btn-primary btn-lg m-1" href="/public/write" role="button">신고하기</a>
    <a class="btn btn-primary btn-lg m-1" href="/menu/main" role="button">메인으로</a>
  </p>
  
  <hr>
  
  


