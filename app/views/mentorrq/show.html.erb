<a href="/mentorrq/index">목록</a>  
  <div class="jumbotron">
    <h3>질문자 : <%= @s_name %></h3>
    <hr class="my-4">
    <p><%= @s_content %></p>

    
     <a href="/mentorrq/edit/<%= @findone.id %>"><%= @findone.id %>번째 수정하기</a> <!--출력-->
     <a href="/mentorrq/delete/<%= @findone.id %>">삭제하기</a>
    
    
  </div>
  
  
  
<form action="/mentoraw/make" method="get">
    <input type="hidden" name="id" value="<%= @findone.id %>">
    <div class="form-group">
    <label for="exampleFormControlInput1">답변자</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="여기다가 답변자의 이름을 입력하세요." name="name"> 
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">답변내용</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="content"></textarea>
  </div>
  
  <button type="submit">답변하기!</button>
</form>

<!-- 여기부터는 답변들입니다.-->
<% @findtwo.each do |a| %> 
  <div>
    <h3>답변자 : <%= a.name %></h3>
    <hr class="my-4">
    <p><%= a.content %></p>
    <a href="/mentoraw/destroy/<%= a.id %>">삭제하기</a>
  </div>
<% end %>

